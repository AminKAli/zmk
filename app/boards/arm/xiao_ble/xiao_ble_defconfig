CONFIG_SOC_SERIES_NRF52X=y
CONFIG_SOC_NRF52840_QIAA=y
CONFIG_BOARD_XIAO_BLE=y

# Enable MPU
CONFIG_ARM_MPU=y

# Enable hardware stack protection
CONFIG_HW_STACK_PROTECTION=y

# enable GPIO
CONFIG_GPIO=y

# enable uart driver
CONFIG_SERIAL=y

# enable console
CONFIG_CONSOLE=y

# Logger cannot use itself to log
CONFIG_USB_CDC_ACM_LOG_LEVEL_OFF=y

# enable USB
CONFIG_USB_DEVICE_STACK=y

# Build UF2 by default, supported by the Adafruit nRF52 Bootloader
CONFIG_BUILD_OUTPUT_UF2=y
CONFIG_USE_DT_CODE_PARTITION=y


CONFIG_MPU_ALLOW_FLASH_WRITE=y
CONFIG_NVS=y
CONFIG_SETTINGS_NVS=y
CONFIG_FLASH=y
CONFIG_FLASH_PAGE_LAYOUT=y
CONFIG_FLASH_MAP=y

CONFIG_ZMK_ESB=n  # Set to y to enable ESB protocol
CONFIG_ZMK_ESB_RECEIVER=n # Set to 'y' to build a receiver(central) image and 'n' to build a transmitter(peripheral) 
CONFIG_ESB_FAST_RAMP_UP=n
CONFIG_ZMK_ESB_DYNAMIC_PAYLOAD=n
CONFIG_ZMK_ESB_REDUCE_CONSUMPTION=n

CONFIG_ZMK_BLE=n  # Set to 'y' to enable BLE
CONFIG_ZMK_SPLIT_LLPM=n  # Set to 'y' to enable LLPM 1ms protocol
CONFIG_ZMK_SPLIT_ROLE_CENTRAL=n  # Set to 'y' to build a central image and 'n' to build a peripheral
CONFIG_ZMK_SPLIT=y

CONFIG_ZMK_KSCAN_DEBOUNCE_PRESS_MS=0
CONFIG_ZMK_KSCAN_DEBOUNCE_RELEASE_MS=5

CONFIG_SERIAL=n
CONFIG_CONSOLE=n
CONFIG_LOG=n
CONFIG_UART_CONSOLE=n